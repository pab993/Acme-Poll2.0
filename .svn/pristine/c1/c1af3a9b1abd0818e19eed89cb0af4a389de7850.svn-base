<%@page language="java" contentType="text/html; charset=ISO-8859-1" pageEncoding="ISO-8859-1"%>

<%@taglib prefix="spring" uri="http://www.springframework.org/tags"%>
<%@taglib prefix="security" uri="http://www.springframework.org/security/tags"%>

<div>
	<img src="images/logo.png" alt="Acme-Poll Co., Inc." />
</div>

<div>
	<ul id="jMenu">
		<!-- Do not forget the "fNiv" class for the first level links !! -->
		<security:authorize access="hasRole('ADMIN')">
			<li><a class="fNiv" href="administrator/dashboard.do"><spring:message code="master.page.dashboard" /></a></li>
			<li><a class="fNiv" href="configurationSystem/edit.do"><spring:message code="master.page.configuration" /></a></li>
			<li><a class="fNiv" href="administrator/listOfPollers.do"><spring:message code="master.page.list.pollers" /></a></li>
			<li><a class="fNiv"><spring:message	code="master.page.bills" /></a>
				<ul>
					<li class="arrow"></li>
					<li><a href="bill/endorsedList.do"><spring:message code="master.page.bills.endorsed" /></a></li>
					<li><a href="bill/notEndorsedList.do"><spring:message code="master.page.bills.not.endorsed" /></a></li>					
				</ul>
			</li>
		</security:authorize>
		
		<security:authorize access="hasRole('POLLER')">
			<li><a class="fNiv" href="poll/myList.do"><spring:message code="master.page.poll.myList" /></a></li>
			<li><a class="fNiv" href="bill/myList.do"><spring:message code="master.page.bill.myList" /></a></li>
		</security:authorize>
		
		<security:authorize access="isAnonymous()">
			<li><a class="fNiv" href="poll/search.do"><spring:message code="master.page.poll.search" /></a></li>
			<li><a class="fNiv" href="poll/list.do"><spring:message code="master.page.poll.list" /></a></li>
			<li><a class="fNiv" href="security/login.do"><spring:message code="master.page.login" /></a></li>
			<li><a class="fNiv" href="poller/register.do"><spring:message code="master.page.poller.register" /></a></li>
		</security:authorize>
		
		<security:authorize access="isAuthenticated()">
			<li><a class="fNiv" href="poll/search.do"><spring:message code="master.page.poll.search" /></a></li>
			<li><a class="fNiv" href="poll/list.do"><spring:message code="master.page.poll.list" /></a></li>
			<li>
				<a class="fNiv"> 
					<spring:message code="master.page.profile" /> 
			        (<security:authentication property="principal.username" />)
				</a>
				<ul>
					<li class="arrow"></li>
					<li><a href="actor/seeProfile.do"><spring:message code="master.page.actor.profile" /></a></li>				
					<li><a href="j_spring_security_logout"><spring:message code="master.page.logout" /> </a></li>
				</ul>
			</li>
		</security:authorize>
	</ul>
</div>

